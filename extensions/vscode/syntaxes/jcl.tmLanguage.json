{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "JCL",
  "scopeName": "source.jcl",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#types"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.jcl",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.jcl",
          "match": "\\b(if|then|else|when|for|in|fn|import|as)\\b"
        },
        {
          "name": "keyword.operator.logical.jcl",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.jcl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.jcl",
              "match": "\\\\(n|r|t|\\\\|\"|\\$)"
            },
            {
              "name": "meta.embedded.line.jcl",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                {
                  "include": "$self"
                }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.single.jcl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.jcl",
              "match": "\\\\(n|r|t|\\\\|')"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.jcl",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.jcl",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.jcl",
          "match": "\\+\\+|\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.comparison.jcl",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.jcl",
          "match": "="
        },
        {
          "name": "keyword.operator.logical.jcl",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.null.jcl",
          "match": "\\?\\?|\\?\\."
        },
        {
          "name": "keyword.operator.lambda.jcl",
          "match": "=>"
        },
        {
          "name": "keyword.operator.ternary.jcl",
          "match": "\\?|:"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.jcl",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.control.jcl"
            },
            "2": {
              "name": "entity.name.function.jcl"
            }
          }
        },
        {
          "name": "support.function.builtin.jcl",
          "match": "\\b(upper|lower|trim|replace|split|join|format|substr|startswith|endswith|contains|jsonencode|jsondecode|yamlencode|yamldecode|tomlencode|tomldecode|base64encode|base64decode|urlencode|urldecode|merge|lookup|keys|values|length|sort|reverse|distinct|flatten|zip|concat|map|filter|reduce|min|max|sum|avg|abs|ceil|floor|round|pow|sqrt|md5|sha1|sha256|sha512|file|fileexists|dirname|basename|pathexpand|template|templatefile|tostring|tonumber|tobool|totype|timestamp|formatdate|timeadd|regex|regexreplace|try)\\b"
        },
        {
          "name": "meta.function-call.jcl",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.jcl"
            }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.jcl",
          "match": "\\b(Int|Float|String|Bool|List|Map|Function|Any|Null)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.jcl",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.jcl",
          "match": "\\bnull\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.jcl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
